{%- include 'atb-render' field:'atb_show_titles' -%}
{%- assign atb_show_titles = val -%}
{%- include 'atb-render' field:'atb_title_to_left' -%}
{%- assign atb_title_to_left = val -%}
{%- include 'atb-render' field:'atb_boxed_title' -%}
{%- assign atb_boxed_title = val -%}
{%- include 'atb-render' field:'atb_text1' -%}
{%- assign atb_text1 = val -%}
{%- include 'atb-render' field:'atb_text2' -%}
{%- assign atb_text2 = val -%}
{%- if atb_in_line == blank -%}
{%- assign atb_in_line = false -%}
{%- else -%}
{%- assign atb_in_line = true -%}
{%- endif -%}
{%- if atb_gridnopadding == blank -%}
{%- assign atb_gridnopadding = false -%}
{%- else -%}
{%- assign atb_gridnopadding = true -%}
{%- endif -%}
{%- if atb_containerpadding == blank -%}
{%- assign atb_containerpadding = false -%}
{%- else -%}
{%- assign atb_containerpadding = true -%}
{%- endif -%}
{%- if atb_fullwidth == blank -%}
{%- assign atb_fullwidth = false -%}
{%- else -%}
