{%- assign item = section.settings -%}
<div class="{% if item.top_offset == 'none' %}nomargin {% elsif item.top_offset == 'small' %}tt-offset-small {% endif %}container-indent {{ item.custom_classes }}"{% if item.use_background and item.background_boxed == false %} style="background:{{ item.background_color }}"{% endif %} data-sectionname="index_iconbanners2">
  <div class="container{% if item.fullwidth %}-fluid{% endif %}{% if item.items_always_in_center %} text-center{% endif %}"{% if item.use_background and item.background_boxed %} style="background:{{ item.background_color }}"{% endif %}>

    <div class="tt-single-text-with-icons ib2{{ section_id }}" data-slick='{"autoplay": {{ item.module_autoplay }}, "autoplaySpeed": {{ item.delay_time }}}'>
      
      {%- if blocks.size > 0 -%}
      {%- for block0 in blocks -%}{%- assign b_i = block_-[forloop.index0]%}

      <div class="tt-single-text-with-icons-item" {{ block.shopify_attributes }}>
        {% if b_i.link != blank %}<a href="{{ b_i.link }}" data-hovercolors>{% endif %}
          <i class="icon {{ b_i.icon }}" style="color: {% if item.same_iconcolor %}{{ item.icon_color }}{% else %}{{ b_i.icon_color }}{% endif %}"
             data-c="{% if item.same_iconcolor %}{{ item.icon_color }}{% else %}{{ b_i.icon_color }}{% endif %}"
             data-ac="{% if item.same_iconcolor %}{{ item.icon_hover_color }}{% else %}{{ b_i.icon_colorh }}{% endif %}"
             ></i>
          <p style="color:{{ item.title_color }};" data-c="{{ item.title_color }}" data-ac="{{ item.title_hover_color }}">{{ b_i.text1 }}</p>
        {% if b_i.link != blank %}</a>{% endif %}
      </div>

      {%- endfor -%}
      {%- else -%}
      <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
      {%- endif -%}
      
    </div>

  </div>
</div>
<style>
  .ib2{{ section_id }}.tt-single-text-with-icons{
    font-size: {{ item.textsize }}px;
    line-height: {{ item.textsize }}px;
    font-weight: {{ item.fontweighttext }};
  }
  .ib2{{ section_id }}.tt-single-text-with-icons .tt-single-text-with-icons-item i{
    font-size: {{ item.iconsize }}px;
    line-height: {{ item.iconsize }}px;
    top: {{ item.iconposition }}px;
  }
  .ib2{{ section_id }}.tt-single-text-with-icons .tt-single-text-with-icons-item{
