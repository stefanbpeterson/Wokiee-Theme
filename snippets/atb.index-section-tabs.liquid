{%- include 'atb-render' field:'section_id' -%}
{%- assign section_id = val -%}
{%- include 'atb-render' field:'atb_top_offset' -%}
{%- assign atb_top_offset = val -%}
{%- include 'atb-render' field:'atb_fullwidth' -%}
{%- assign atb_fullwidth = val -%}
{%- include 'atb-render' field:'atb_show_title' -%}
{%- assign atb_show_title = val -%}
{%- include 'atb-render' field:'atb_text1' -%}
{%- assign atb_text1 = val -%}
{%- include 'atb-render' field:'block_type' -%}
{%- assign block_type = val -%}
{%- include 'atb-render' field:'blocks' -%}
{%- assign blocks = val -%}
{%- include 'atb-render' field:'block_tab_name' -%}
{%- assign block_tab_name = val -%}
{%- include 'atb-render' field:'block_collection' -%}
{%- assign block_collection = val -%}
{%- include 'atb-render' field:'block_limit' -%}
{%- assign block_limit = val -%}
{%- include 'atb-render' field:'block_toshow' -%}
{%- assign block_toshow = val -%}
{%- include 'atb-render' field:'block_step' -%}
{%- assign block_step = val -%}
{%- include 'atb-render' field:'block_module_autoplay' -%}
{%- assign block_module_autoplay = val -%}
{%- include 'atb-render' field:'block_delay_time' -%}
{%- assign block_delay_time = val -%}
{%- include 'atb-render' field:'block_showbtn' -%}
{%- assign block_showbtn = val -%}
{%- include 'atb-render' field:'block_btnname' -%}
{%- assign block_btnname = val -%}
{%- if atb_fullwidth == blank -%}
{%- assign atb_fullwidth = false -%}
{%- else -%}
{%- assign atb_fullwidth = true -%}
{%- endif -%}
{%- if atb_show_title == blank -%}
{%- assign atb_show_title = false -%}
{%- else -%}
{%- assign atb_show_title = true -%}
{%- endif -%}
{%- assign no_image = images['no_image_comparison'] -%}

<section id="shopify-section-{{section_id}}" class="shopify-section index-section">
{%- assign item = section.settings -%}
<div class="{% if item.top_offset == 'none' %}nomargin {% elsif item.top_offset == 'small' %}tt-offset-small {% endif %}container-indent" data-sectionname="index_horizontaltabs" data-respjs="index_sectiontabs">
  <div class="container{% if item.fullwidth %}-fluid-custom{% endif %} container-fluid-custom-mobile-padding">

    {% if item.show_title %}<div class="tt-block-title text-left">
      <h2 class="tt-title">{{ item.text1 }}</h2>
    </div>{% endif %}
    {% if item.show_title %}<div class="tt-tab-wrapper">{% endif %}

      <ul class="nav nav-tabs tt-tabs-default" role="tablist">
        {%- for block0 in blocks -%}
{%- if block_showbtn[forloop.index0] == blank -%}
{%- assign my_checkbox1 = false -%}
{%- else -%}
{%- assign my_checkbox1 = true -%}
{%- endif -%}
{%- if block_module_autoplay[forloop.index0] == blank -%}
{%- assign my_checkbox0 = false -%}
{%- else -%}
{%- assign my_checkbox0 = true -%}
{%- endif -%}
        <li class="nav-item">
          <a href="#{{ section_id }}{{ forloop.index }}" class="nav-link{% if forloop.first %} active{% endif %}" data-toggle="tab" role="tab">{{ block_tab_name[forloop.index0] }}</a>
        </li>
        {%- endfor -%}
      </ul>

      <div class="tab-content">
        {%- for block0 in blocks -%}
{%- if block_showbtn[forloop.index0] == blank -%}
{%- assign my_checkbox1 = false -%}
{%- else -%}
{%- assign my_checkbox1 = true -%}
{%- endif -%}
{%- if block_module_autoplay[forloop.index0] == blank -%}
{%- assign my_checkbox0 = false -%}
{%- else -%}
{%- assign my_checkbox0 = true -%}
{%- endif -%}
        {%- assign name_collection = block_collection[forloop.index0] -%}
        {%- if name_collection == blank -%}{%- assign name_collection = "all" -%}{%- endif -%}
        {%- assign collection = collections[name_collection] -%}
        <div id="{{ section_id }}{{ forloop.index }}" class="tab-pane{% if forloop.first %} active{% endif %}" role="tabpanel" {{ block.shopify_attributes }}>
          {%- if block_type[forloop.index0] == 'item2' -%}
          <div class="row tt-layout-product-item">

            <div class="ajaxcontent startajax" data-content="col_{{ collection.handle }}+num_{{ block_limit[forloop.index0]}}+col-lg-{{ block_toshow[forloop.index0] }}"></div>

          </div>
          {%- if my_checkbox1 -%}
          <div class="text-center tt_product_showmore">
            <a href="collections/{{ collection.handle }}" class="btn btn-border">{{ block_btnname[forloop.index0] }}</a>
          </div>
          {%- endif -%}
          {%- else -%}
          
          <div class="ajaxcontent startajax slider" data-content="col_{{ collection.handle }}+num_{{ block_limit[forloop.index0] }}+col-lg-{{ block_toshow[forloop.index0] }}+toshow_{{ block_toshow[forloop.index0] }}+slider_true+step_{{ block_step[forloop.index0] }}+autoplay_{{ my_checkbox0 }}+speed_{{ block_delay_time[forloop.index0] }}{% if item.show_title %}+showtitle_{% endif %}"></div>
          
          {%- endif -%}
        </div>
        {%- endfor -%}
      </div>

    {%- if item.show_title -%}</div>{%- endif -%}
  </div>
</div>
	


</section>