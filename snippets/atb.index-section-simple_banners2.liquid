<section id="shopify-section-{{section_id}}" class="shopify-section index-section">
{%- assign item = section.settings -%}

{%- assign grid = atb_items -%}
{%- capture info_image_size -%}
{%- case grid -%}
{%- when '6' -%}{%- if item.fullwidth -%}1024x400px{%- else -%}600x300px{%- endif -%}
{%- when '4' -%}{%- if item.fullwidth -%}800x800px{%- else -%}400x400px{%- endif -%}
{%- when '2' -%}{%- if item.fullwidth -%}360x400px{%- else -%}180x200px{%- endif -%}
{%- else -%}{%- if item.fullwidth -%}600x600px{%- else -%}300x300px{%- endif -%}
{%- endcase -%}
{%- endcapture -%}

{%- assign img_size = info_image_size | split: 'x' | first | append: 'x' -%}
<div class="{% if item.top_offset == 'none' %}nomargin {% elsif item.top_offset == 'small' %}tt-offset-small {% endif %}container-indent {{ item.custom_classes }} ttlayoutpromo02{{ section_id }}">
  <div class="container{% if item.fullwidth %}-fluid-custom{% endif %}">
    {%- if item.show_title -%}
    <div class="tt-block-title{% if item.title_to_left %} text-left{% endif %}{% if item.boxed_title and item.fullwidth %} container{% endif %}">
      <h2 class="tt-title">{{ item.text1 }}</h2>
      {%- unless item.text2 == '' -%}<div class="tt-description">{{ item.text2 }}</div>{%- endunless -%}
    </div>
    {%- endif -%}
    <div class="row tt-layout-promo02">
      {%- if blocks.size > 0 -%}
      {%- for block0 in blocks -%}{%- assign b_i = block_-[forloop.index0]%}
{%- if block_show_button[forloop.index0] == blank -%}
{%- assign my_checkbox1 = false -%}
{%- else -%}
{%- assign my_checkbox1 = true -%}
{%- endif -%}
{%- if block_center_texts[forloop.index0] == blank -%}
{%- assign my_checkbox0 = false -%}
{%- else -%}
{%- assign my_checkbox0 = true -%}
{%- endif -%}
{%- assign my_image_key0 = block_image[forloop.index0]| split: '/files/' | last -%}
{%- assign my_image0 = images[my_image_key0] -%}
      <div class="col-sm-6 col-md-{{ item.items }} {% if item.twoinmobile %}col-6{% else %}col-12-440width{% endif %} blid{{ blocks[forloop.index0] }}" {{ block.shopify_attributes }}>
        <div class="respimgsize tt-promo02{% if b_i.center_texts %} text-center{% endif %}" data-hovercolors>
          <a href="{{ b_i.link }}" class="image-box"
             {% if item.images_circle or item.use_img_width %} style="{% if item.images_circle %}border-radius: 50%;{% endif %}{% if item.use_img_width %} max-width: {{ item.img_width }}px;{% endif %}"{% endif %}
             >
            {%- if b_i.image == blank -%}{%- include "get_svg" type:'image' size:info_image_size -%}
            {%- else -%}
            {%- assign scale_numbers = '_' | append: img_size -%}
            <img class="lazyload"
                 data-mainimageratio = '{{ b_i.image.aspect_ratio }}'
                 data-mainimage="{{ b_i.image | img_url: '100x100' | replace: '100x100', 'respimgsize' }}"
                 alt="{{ b_i.image.alt }}">
            {%- endif -%}
          </a>
          <div class="tt-description">
            {% if b_i.text1 != '' or b_i.text2 != '' %}
            <a href="{{ b_i.link }}" class="tt-title">
              {% if b_i.text1 != '' %}<div class="tt-title-small"
                                           style="color:{{ b_i.text1c }};"
                                           data-c="{{ b_i.text1c }}"
                                           data-ac="{{ b_i.text1ca }}"
                                           >{{ b_i.text1 }}</div>{% endif %}
              {% if b_i.text2 != '' %}<div class="tt-title-large"
                                           style="color:{{ b_i.text2c }};"
                                           data-c="{{ b_i.text2c }}"
                                           data-ac="{{ b_i.text2ca }}"
                                           >{{ b_i.text2 }}</div>{% endif %}
            </a>
            {% endif %}
            {% if b_i.text3 != '' %}<p style="color:{{ b_i.text3c }};">{{ b_i.text3 }}</p>{% endif %}
            {% if b_i.show_button %}<a href="{{ b_i.link }}"
                                       class="btn"
                                       style="background:{{ b_i.btn_bgc }}; color: {{ b_i.btn_textc }}"
                                       data-bgc="{{ b_i.btn_bgc }}"
                                       data-abgc="{{ b_i.btn_bgca }}"
                                       data-c="{{ b_i.btn_textc }}"
                                       data-ac="{{ b_i.btn_textca }}"
                                       data-hovercolors>{{ b_i.button_name }}</a>{% endif %}
          </div>
        </div>
      </div>
      {%- endfor -%}
      {%- else -%}
      <span style="display: flex; justify-content: center;">This section doesn’t currently include any content. Add content to this section using the sidebar.</span>
      {%- endif -%}
    </div>
  </div>
</div>
<style>  
  {%- for block0 in blocks -%}{%- assign b_i = block_-[forloop.index0]%}
{%- if block_show_button[forloop.index0] == blank -%}
{%- assign my_checkbox1 = false -%}
{%- else -%}
{%- assign my_checkbox1 = true -%}
{%- endif -%}
